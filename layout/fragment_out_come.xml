<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >
    <LinearLayout
        android:id="@+id/frag_record_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/frag_record_oc_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_qita_fs"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/frag_record_oc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingLeft="5dp"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/frag_record_oc_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:inputType="number"
        />
    <View
        android:id="@+id/frag_record_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/frag_record_linear"
        android:background="@color/gray_f3f3f3"
        />
    <GridView
        android:id="@+id/frag_record_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frag_record_line"
        android:numColumns="5"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        />
    <android.inputmethodservice.KeyboardView
        android:id="@+id/frag_record_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:keyBackground="@color/gray_f3f3f3"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="1dp"
        android:shadowColor="@color/white"
        android:shadowRadius="0.0"
        android:keyTextColor="@color/black"
        />
    <TextView
        android:id="@+id/frag_record_beizhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/frag_record_keyboard"
        android:text="@string/add_remark"
        android:maxLength="20"
        android:textColor="@color/gray_7d7d7d"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/frag_record_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/frag_record_beizhu"
        android:layout_alignParentRight="true"
        android:textColor="@color/gray_7d7d7d"
        android:textSize="16sp"
        android:text="2013年10月3日 10:12"
        />
</RelativeLayout>