<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_f3f3f3"
    >   
    <RelativeLayout
        android:id="@+id/home_top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:text="@string/home_title"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/home_btn_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/search" />
    </RelativeLayout>

    <ListView
        android:id="@+id/home_mid_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_top_layout"
        android:divider="@null"
        android:dividerHeight="2dp"
        android:padding="10dp"
        android:scrollbars="none" />
    <ImageView
        android:id="@+id/home_btn_more"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/more"
        android:scaleType="centerCrop"
        android:layout_margin="20dp"
        android:background="@drawable/home_btn_back"
        />
    <Button
        android:id="@+id/home_btn_edit"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/home_btn_edit"
        android:text="@string/home_jilu"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/home_btn_more"
        android:layout_alignBottom="@+id/home_btn_more"
        />
    <ImageView
        android:id="@+id/AnimTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_icon1"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/TextTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="积分卡死了的减肥"
        android:textSize="35sp"
        />
</RelativeLayout>