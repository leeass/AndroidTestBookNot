<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    >
    <ImageView
        android:id="@+id/search_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/it_back"
        android:scaleType="centerCrop"
        android:layout_marginStart="5dp"
        />
    <EditText
        android:id="@+id/search_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/search_back"
        android:layout_marginLeft="3dp"
        android:hint="@string/gearch_empty"
        android:background="@drawable/search_edit"
        android:textSize="20sp"
        />
    <ImageView
        android:id="@+id/search_done"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@mipmap/search"
        android:scaleType="centerCrop"
        android:layout_alignRight="@+id/search_edit"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:id="@+id/search_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_empty"
        android:textSize="20dp"
        android:drawableTop="@mipmap/it_searchtext"
        android:layout_centerInParent="true"
        />
    <ListView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_edit"
        android:layout_marginTop="5dp"
        />
</RelativeLayout>